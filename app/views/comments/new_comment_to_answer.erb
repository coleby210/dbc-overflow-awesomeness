
<!-- Form to make a new Comment in relation to an Answer -->
<!-- sends to Post route ____ -->

<h1>Make a comment on this Answer</h1>

<p><%= @answer.body %></p>
<p><%= @answer.user.first_name %></p>

<form method="POST" action="/comments">
    <input type="hidden" name="commentable_id" value="<%= @answer.id %>">
    <input type="hidden" name="commentable_type" value="Answer">
    <textarea name="body"></textarea>
    <input type="submit" value="Submit Comment">
</form>
