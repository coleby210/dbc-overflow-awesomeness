<h1>Welcome to DBC Overflow Awesomeness!!!!!!!!!!</h1>

<h3><a id="new-question" href="/questions/new">Create a new question here: Ask A Question!</a></h3>

<div id='questions-list'>
  <% @questions.each do |each_question| %>
    <%= erb :"/questions/_each_question_partial", layout: false, locals: {question: each_question} %>
  <% end %>
</div>






<table>
  <tr>
    <th>File Description</th>
    <th>File Location</th>
  </tr>
  <tr>
    <td>This view file</td>
    <td><code><%= __FILE__.gsub(Sinatra::Application.root, '') %></code></td>
  </tr>
  <tr>
    <td>The layout file</td>
    <td><code><%= File.expand_path('../layout.erb', __FILE__).gsub(Sinatra::Application.root, '') %></code></td>
  </tr>
  <tr>
    <td>The current controller</td>
    <td><code><%= File.expand_path('../../controllers/index.rb', __FILE__).gsub(Sinatra::Application.root, '') %></code></td>
  </tr>
</table>

<% if logged_in? %>
  <ul><li>
    <form method="POST" action="/sessions">
      <input type="hidden" name="_method" value="DELETE">
      <input type="submit" value="Log Out">
  </li></ul>
<% else %>
  <ul>
    <li><a href="/sessions/new">Log In</a></li>
    <li><a href="/users/new">Register</a></li>
  </ul>
<% end %>
