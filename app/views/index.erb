<% if logged_in? %>
  <ul><li>
    <form method="POST" action="/sessions">
      <input type="hidden" name="_method" value="DELETE">
      <input type="submit" value="Log Out">
  </li></ul>
<% else %>
  <ul>
    <li><a href="/sessions/new">Log In</a></li>
    <li><a href="/users/new">Register</a></li>
  </ul>
<% end %>
