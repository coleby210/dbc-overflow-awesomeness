<!-- Form to create a new Question -->
<!-- Extraneous tags on the form - to be refactored later -->
<h1>Create a question</h1>

<form method="post" action="/questions">
  <label for="question_title_input">
  <input type="hidden" name="question[user_id]" value= "<%= @id %>">
  <input id="question_title_input" name="question[title]" type="text" placeholder="Title" style="width:400px" pattern=".{5,}" required title="No title?  No dice!">
  <br>
  <label for="question_text_input">
    <textarea id="question_text_input" name="question[body]" cols="92" rows="15" placeholder="Post your question here!" pattern=".{10,}" required title="Come on!  Please type a real question!"></textarea>
  <br>
  <input type="submit" value="Create a question!">
</form>
